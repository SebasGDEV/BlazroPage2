@page "/dialog"

        <MatDialog @bind-IsOpen="@dialogIsOpen">
            <MatDialogTitle>Hi</MatDialogTitle>
            <MatDialogContent>
                <p>What's your favorite animal?</p>
                <MatSelect TValue="string" Label="Title">
                    <MatOptionString ></MatOptionString>
                    <MatOptionString Value="dr">Dr.</MatOptionString>
                    <MatOptionString Value="prof">Prof.</MatOptionString>
                </MatSelect>

            </MatDialogContent>
            <MatDialogActions>
                <MatButton OnClick="@(e => { dialogIsOpen = false; })">No Thanks</MatButton>
                <MatButton OnClick="@OkClick">OK</MatButton>
            </MatDialogActions>
        </MatDialog>
 
        @code
        {

            protected override void OnInitialized()
            {
                OpenDialog();
            }
            bool dialogIsOpen = false;
            string name = null;
            string animal = null;
            string dialogAnimal = null;
 
            void OpenDialog()
            {
                dialogAnimal = null;
                dialogIsOpen = true;
            }
 
            void OkClick()
            {
                animal = dialogAnimal;
                dialogIsOpen = false;
            }
 
        }
 
    
